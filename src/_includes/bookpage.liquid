---
layout: bookbase.njk
---

{% assign alt = title | append: " by " | append: author %}

<section class="entry-container">
  <div class="entry-details">
    {% image cover, alt, "entry-cover" %}
    <div>
      <h3>details</h3>
      <div class="grid two-col-flex">
        <div class="grid">
          <span class="label">author</span> <span>{{ author }}</span>
          <span class="label">published</span> <span>{{ yearPublished }}</span>
          <span class="label">date start</span> <span>{{ dateStarted | toUTC }}</span>
          <span class="label">date read</span> <span>{% if status == "Read"%}{{ date | toUTC }}{%
            else %}{{ status }}{% endif %}</span>
          <span class="label">edition</span> <span>{{ edition }}</span>
        </div>
      </div>
      <p class="entry-icon-group">{% if rating %}<span class="entry-rating">{% renderStar rating %}</span>{% endif %}
        <span class="entry-icon">{%
          if
          bookBug %}<a href="/logs/bookbug">{% lucide "bug" %}</a>{% endif %} {% if bookClub %}{% lucide "users-round"
          %}{% endif %} {% if reread
          %}{%
          lucide "refresh-cw" %}{% endif %} {% if favourite %}{% lucide "heart" %}{% endif %}</span>
      </p>
      <p class="entry-genre-group">{% for gen in genre %} <span class="entry-genre">{{ gen }}</span> {% if gen !=
        genre.last
        %}{% lucide "dot" %}{% endif %}{% endfor %}</p>
      {% if contentWarning %}<p><strong>content warnings:</strong> {% for cw in contentWarning %} {{ cw }}{% if cw !=
        contentWarning.last %}, {% endif %}{% endfor %}</p>{% endif %}
    </div>
  </div>
</section>

{{ content }}

