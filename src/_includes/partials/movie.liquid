<li class="log-entry">
  <span class="log-date">{{ movie.DateWatched | toUTC }}</span>
  <span class="log-title"><em>{{ movie.Title }} ({{ movie.Year }})</em> <span class="log-dir">dir. {% for dir in
      directors %}{{ dir
      }}{% if dir != directors.last %}, {%endif%}{% endfor %}</span></span> <span class="log-icon">{% if movie.Rewatch
    %}↻{%
    endif %} {% if movie.Favourite %}♡{% endif %}</span>
  <span class="log-rating">{% renderStar movie.Rating %}</span>
</li>